{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information"
        },
        "Console": {
            "FormatterName": "json",
            "FormatterOptions": {
                "SingleLine": true,
                "IncludeScopes": true,
                "TimestampFormat": "yyyy-MM-ddTHH:mm:ssZ",
                "UseUtcTimestamp": true,
                "JsonWriterOptions": {
                    "Indented": false
                }
            }
        }
    },
    "AllowedHosts": "*"
}